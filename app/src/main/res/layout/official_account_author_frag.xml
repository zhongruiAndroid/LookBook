<?xml version="1.0" encoding="utf-8"?>
<com.github.progresslayout.ProgressLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/plLoad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/dlOfficialAuthor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <include layout="@layout/app_title"></include>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvOfficialArticle"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvOfficialAccountAuthor"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/c_white"
            android:clickable="true"
            />
    </android.support.v4.widget.DrawerLayout>
</com.github.progresslayout.ProgressLinearLayout>