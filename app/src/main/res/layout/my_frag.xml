<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivMyRanking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="10dp"
            android:src="@drawable/jifen_ranking" />

        <com.github.fastshape.MyImageView
            android:id="@+id/ivMyHead"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/my_default"
            app:radius="45dp"
            app:solidColor="@color/c_white" />

        <TextView
            android:id="@+id/tvMyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="去登陆"
            android:textColor="@color/c_white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvMyLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="等级:-- 排名:--"
            android:textColor="@color/c_white"
            android:textSize="14sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <com.github.fastshape.MyTextView
            android:id="@+id/tvMyJiFen"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/my_jifen"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="我的积分"
            android:textColor="@color/c_black" />

        <TextView
            android:id="@+id/tvMyCoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            tools:text="10"
            android:paddingRight="20dp"
            />
    </FrameLayout>

    <com.github.fastshape.MyTextView
        android:id="@+id/tvMyCollect"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/my_collect"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="我的收藏"
        android:textColor="@color/c_black" />

    <com.github.fastshape.MyTextView
        android:id="@+id/tvMyShare"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/my_jifen"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="我的分享"
        android:textColor="@color/c_black" />

    <com.github.fastshape.MyTextView
        android:id="@+id/tvMyTodo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/my_todo"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="TODO"
        android:textColor="@color/c_black" />

    <com.github.fastshape.MyTextView
        android:id="@+id/tvMyNight"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/my_night"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="夜间模式"
        android:textColor="@color/c_black" />

    <com.github.fastshape.MyTextView
        android:id="@+id/tvMySetting"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/my_setting"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="系统设置"
        android:textColor="@color/c_black" />

    <com.github.fastshape.MyTextView
        android:id="@+id/tvMyExit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/my_exit"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="退出登录"
        android:textColor="@color/c_black" />
</LinearLayout>